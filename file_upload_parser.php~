<?php
$fileName = $_FILES["entry_img"]["name"]; // The file name
$fileTmpLoc = $_FILES["entry_img"]["tmp_name"]; // File in the PHP tmp folder
$fileType = $_FILES["entry_img"]["type"]; // The type of file it is
$fileSize = $_FILES["entry_img"]["size"]; // File size in bytes
$fileErrorMsg = $_FILES["entry_img"]["error"]; // 0 for false... and 1 for true
if (!$fileTmpLoc) { // if file not chosen
    echo "ERROR: Please browse for a file before clicking the upload button.";
    exit();
}
if(move_uploaded_file($fileTmpLoc, "test_uploads/$fileName")){
    echo "$fileName upload is complete";
} else {
    echo "move_uploaded_file function failed";
}
?>
