            <script>
      //$('#submit').css('cursor','default');
      //$('#submit').css('opacity','0.4');
      function formdata(){
        if($('input[type=checkbox]:checked').length=='1'){
          $('#submit').css('cursor','pointer');
          $('#submit').removeAttr('disabled');
          $('#submit').animate({
            opacity:1,
          },500);
        }
        else{
          $('#submit').css('cursor','default');
          $('#submit').attr('disabled','true');
          $('#submit').animate({
            opacity:0.4,
          },500);
        }
      }
    </script>
         
